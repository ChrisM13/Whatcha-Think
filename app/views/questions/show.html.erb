<h2>Question's Show page</h2>

<%= @question.content %>

<div>
    <%= form_for [@question, @answer] do |f| %>
        <%= f.label :rating %>
        <%= f.text_field :rating %>
        <%= f.label :comment %>
        <%= f.text_field :comment %>
          <div class="actions"><%= f.submit "Next Question", class: 'button' %></div>
    <% end %>
</div>



